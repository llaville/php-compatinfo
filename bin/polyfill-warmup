// @link https://www.tomasvotruba.cz/blog/2018/08/02/5-gotchas-of-the-bin-file-in-php-cli-applications/

if (PHP_SAPI !== 'cli') {
    return;
}

gc_disable(); // performance boost

require_once dirname(__DIR__) . '/config/bootstrap.php';

use Bartlett\CompatInfo\Infrastructure\Framework\Composer\InstalledPackages;

InstalledPackages::getInstalledPolyfills();
